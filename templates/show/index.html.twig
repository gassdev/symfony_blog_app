{% extends 'base.html.twig' %}

{% block body %}
  <div class="container">
    <h1 class="title p-1">
      {{ article.title }}
    </h1>
    <div class="img-fluid">
      <img width="100%"
        src="/assets/blog/images/{{ article.image }}"
        alt="{{ article.title }}" />
    </div>
    <div class="content">
      <p class="date">
        Ecrit le {{ article.createdAt|date('d/m/Y') }} Ã  {{
          article.createdAt|date('H:i')
        }}
        par <span class="author">{{ article.author }}</span>
      </p>
      <h5 class="title">
        {{ article.title }}
      </h5>
      <p class="content text-justify">
        {{ article.content|raw }}
      </p>
    </div>
  </div>
{% endblock %}
