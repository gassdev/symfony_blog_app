{% extends 'base.html.twig' %}
{% block title %}
  Accueil
{% endblock %}

{% block body %}
  <h1>
    Articles de la catégorie "{{ category.title }}"
  </h1>
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        {% for article in articles %}
          <div class="card col-md-4" style="width: 18rem;">
            <p class="date">
              Ecrit le {{ article.createdAt|date('d/m/Y') }} à {{
                article.createdAt|date('H:i')
              }}
              par <span class="author">{{ article.author }}</span>
            </p>
            <img src="/assets/blog/images/{{ article.image }}"
              class="card-img-top"
              alt="{{ article.title }}" />
            <div class="card-body">
              <h5 class="card-title">
                {{ article.title }}
              </h5>

              <a href="{{
                path(
                  'show',
                  {
                    id: article.id
                  }
                )
                }}"
                class="btn btn-primary">
                En savoir plus
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="col-md-4">
      <h4 class="text-center">
        Catégories
      </h4>
      <ul class="list-group">
        {% for category in categories %}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="{{
              path(
                'category.articles',
                {
                  id: category.id
                }
              )
              }}">
              {{ category.title }}
            </a>
            <span class="badge badge-primary badge-pill">
              {{ category.articles.count ~ 'article(s)' }}
            </span>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endblock %}
