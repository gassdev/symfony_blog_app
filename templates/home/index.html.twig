{% extends 'base.html.twig' %}
{% block title %}
  Accueil
{% endblock %}

{% block body %}
  <h1>
    Bienvenue dans la page d'accueil
  </h1>
  <div class="row">
    {% for article in articles %}
      <div class="card col-md-4" style="width: 18rem;">
        <p class="date">
          Ecrit le {{ article.createdAt|date('d/m/Y') }} Ã  {{
            article.createdAt|date('H:i')
          }}
          par <span class="author">{{ article.author }}</span>
        </p>
        <img src="/assets/blog/images/{{ article.image }}"
          class="card-img-top"
          alt="{{ article.title }}" />
        <div class="card-body">
          <h5 class="card-title">
            {{ article.title }}
          </h5>

          <a href="{{
            path(
              'show',
              {
                id: article.id
              }
            )
            }}"
            class="btn btn-primary">
            En savoir plus
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
